.content {
  display: flex;
  flex-direction: column;
}
.tabs-nav {
  position: relative;
  z-index: 1;
  display: flex;
}
.tabs-nav .item {
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  flex: 1;
  color: #4A5B6C;
  text-align: center;
  transition: all .25s;
}
.tabs-nav .item:after {
  content: '';
  position: absolute;
  z-index: 1;
  bottom: 0;
  left: 0;
  right: 0;
  width: 10%;
  height: 2px;
  background-color: transparent;
  margin-left: auto;
  margin-right: auto;
  transition: all .25s;
}
.tabs-nav .item.active {
  color: #429435;
}
.tabs-nav .item.active:after {
  background-color: #429435;
}
.swiper {
  flex: 1;
  height: 1%;
}
.swiper swiper {
  height: 100%;
}
.swiper picker {
  position: relative;
  z-index: 20;
}
.swiper swiper-item {
  display: flex;
  flex-direction: column;
}
.swiper .date-title {
  font-size: 37rpx;
  padding-left: 30rpx;
  padding-top: 30rpx;
}
.swiper .date-title .iconfont {
  font-size: 34rpx;
  color: #bbb;
  margin-left: 10rpx;
}
.swiper scroll-view {
  margin-top: 30rpx;
  padding-bottom: 30rpx;
  flex: 1;
  height: 1%;
}
.swiper .item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-left: 30rpx;
  margin-right: 30rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.swiper .item .left {
  font-size: 30rpx;
}
.swiper .item .left .p {
  color: #BEBEBE;
  margin-top: 10rpx;
}
.swiper .item .right {
  font-size: 36rpx;
}
.swiper .item .right .add {
  color: #FF9813;
}
.swiper .item .right .reduce {
  color: #4AA63C;
}
.swiper .item + .item {
  border-top: 1px solid #D3D3D3;
}

