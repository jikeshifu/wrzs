.content {
  display: flex;
  flex-direction: column;
}
.tabs-nav {
  position: relative;
  z-index: 1;
  display: flex;
}
.tabs-nav .item {
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  flex: 1;
  color: #4A5B6C;
  text-align: center;
  transition: all .25s;
}
.tabs-nav .item:after {
  content: '';
  position: absolute;
  z-index: 1;
  bottom: 0;
  left: 0;
  right: 0;
  width: 20%;
  height: 2px;
  background-color: transparent;
  margin-left: auto;
  margin-right: auto;
  transition: all .25s;
}
.tabs-nav .item.active {
  color: #429435;
}
.tabs-nav .item.active:after {
  background-color: #429435;
}
.swiper {
  flex: 1;
  height: 1%;
}
.swiper swiper,
.swiper scroll-view {
  height: 100%;
}
.swiper scroll-view {
  margin-top: 30rpx;
  padding-bottom: 30rpx;
}
.swiper .item {
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.swiper .item .top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.swiper .item .name {
  font-size: 36rpx;
  flex: 1;
  width: 1%;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  margin-right: 20rpx;
}
.swiper .item .dzf {
  display: flex;
  align-items: center;
}
.swiper .item .dzf .small {
  font-size: 24rpx;
  color: #FF9813;
}
.swiper .item .dzf .money {
  font-size: 42rpx;
  color: #FF9813;
}
.swiper .item .dzf button {
  padding: 10rpx 20rpx;
  background-color: #429435;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.swiper .item .wks {
  font-size: 24rpx;
  color: #429435;
  display: flex;
  align-items: center;
}
.swiper .item .wks uni-count-down {
  margin-right: 5rpx;
}
.swiper .item .yyd {
  display: flex;
  align-items: center;
  color: #FF9813;
}
.swiper .item .yyd .left {
  display: flex;
  align-items: center;
}
.swiper .item .yyd .left uni-count-down {
  margin-right: 5rpx;
}
.swiper .item .yyd button {
  padding: 10rpx 20rpx;
  background-color: #4D5AB4;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.swiper .item .normal {
  font-size: 30rpx;
}
.swiper .item .item-p {
  margin-top: 30rpx;
}
.swiper .item .item-p .p {
  font-size: 24rpx;
  color: #B3B3B3;
}
.swiper .item .item-p .p + .p {
  margin-top: 10rpx;
}
.swiper .item + .item {
  margin-top: 30rpx;
}

