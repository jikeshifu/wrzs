.content {
  display: flex;
  flex-direction: column;
}
.checked {
  margin-left: 30rpx;
  margin-right: 30rpx;
  border-bottom: 1px solid #d3d3d3;
}
.checked .h4 {
  font-size: 30rpx;
}
.checked .p {
  font-size: 24rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.list {
  flex: 1;
  height: 1%;
  padding-left: 30rpx;
  padding-right: 30rpx;
  display: flex;
  flex-direction: column;
  position: relative;
}
.list .h4 {
  font-size: 30rpx;
  margin-top: 30rpx;
}
.list scroll-view {
  flex: 1;
  height: 1%;
  margin-left: -10rpx;
  margin-right: -10rpx;
}
.list scroll-view .col {
  float: left;
  width: 25%;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 30rpx;
}
.list scroll-view .col .item {
  border: 1px solid #eee;
  border-radius: 4rpx;
  font-size: 24rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  text-align: center;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

