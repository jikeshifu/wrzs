.fixed-topbar {
  position: relative;
}
.fixed-topbar image {
  width: 100%;
  height: 231px;
}
.fixed-topbar .fixed-item {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
}
.fixed-topbar .fixed-item .title {
  position: relative;
  display: flex;
  align-items: center;
  color: #fff;
  justify-content: center;
}
.fixed-topbar .fixed-item .title .iconfont {
  position: absolute;
  z-index: 1;
  font-size: 40rpx;
  padding-left: 20rpx;
  left: 0;
  font-weight: bold;
}
.fixed-topbar .fixed-item .title .h1 {
  font-size: 37rpx;
}
.fixed-topbar .time {
  position: absolute;
  z-index: 1;
  left: 0;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  width: 100%;
  color: #fff;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.fixed-topbar .time .left {
  margin-right: 10rpx;
}
.fixed-topbar .time .iconfont {
  font-size: 50rpx;
  margin-right: 10rpx;
  vertical-align: -10rpx;
}
.card-info {
  position: relative;
  z-index: 3;
  margin: -150rpx 30rpx 30rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  background-color: #fff;
}
.card-info .flex-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.card-info .flex-head .left {
  display: flex;
  flex: 1;
  width: 1%;
}
.card-info .flex-head .left image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}
.card-info .flex-head .left .info {
  flex: 1;
  width: 1%;
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.card-info .flex-head .left .info .tt {
  font-size: 36rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.card-info .flex-head .left .info .bb {
  font-size: 24rpx;
  color: #B3B3B3;
}
.card-info .flex-head .left .info .bb .add {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.card-info .flex-head .left .info .bb .iconfont {
  color: #828282;
  vertical-align: -1px;
}
.card-info .flex-head .right button {
  border-radius: 10rpx;
  border-style: solid;
  border-width: 1px;
  font-size: 28rpx;
  padding: 10rpx 15rpx;
  background-color: #fff;
}
.card-info .flex-head .right button .iconfont {
  margin-right: 5rpx;
}
.card-info .flex-head .right .share {
  border-color: #242838;
