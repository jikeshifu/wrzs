.content {
  display: flex;
  flex-direction: column;
}
.fixed-topbar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 10;
}
.fixed-topbar .title {
  display: flex;
  align-items: center;
}
.fixed-topbar .title .iconfont {
  font-size: 40rpx;
  font-weight: bold;
  padding-left: 20rpx;
  padding-right: 20rpx;
  color: #fff;
}
.swiper {
  position: relative;
}
.swiper swiper {
  height: 480rpx;
}
.swiper swiper .swiper-item, .swiper swiper image {
  width: 100%;
  height: 100%;
}
.swiper .dot {
  position: absolute;
  z-index: 1;
  right: 24rpx;
  bottom: 82rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.5);
  padding: 8rpx 15rpx;
  border-radius: 16rpx;
  font-size: 18rpx;
}
.store-desc {
  position: relative;
  background-color: #fff;
  z-index: 2;
  margin-top: -58rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
}
.store-desc .title {
  font-size: 37rpx;
  padding-top: 39rpx;
  padding-bottom: 39rpx;
}
.store-desc .title text {
  color: #FF9813;
  font-size: 18rpx;
  margin-left: 10rpx;
}
.store-desc .flex-items {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.store-desc .flex-items .left {
  font-size: 24rpx;
  color: #B3B3B3;
  flex: 1;
  width: 1%;
  margin-right: 20rpx;
}
.store-desc .flex-items .left .bt {
  margin-top: 5rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.store-desc .flex-items .left .bt .iconfont {
  vertical-align: -1px;
  margin-right: 5rpx;
  color: #429435;
}
.store-desc .flex-items .right {
  background-color: #ECF4EA;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #46973A;
  padding: 15rpx 20rpx;
}
.store-desc .flex-items .right .iconfont {
  color: #46973A;
  font-size: 40rpx;
  margin-right: 10rpx;
  vertical-align: -6rpx;
}
.store-desc .new-cus-active {
  background-color: #FFF3E5;
  border-radius: 10rpx;
  color: #C77A17;
  font-size: 24rpx;
  padding: 20rpx;
  margin-top: 32rpx;
}
.store-desc .new-cus-active .p + .p {
  margin-top: 15rpx;
}
.scroll-view {
  flex: 1;
  height: 1%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: flex;
  flex-direction: column;
}
.scroll-view .title {
  color: #2E2E2E;
  font-size: 30rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.scroll-view .scroll-contain {
  position: relative;
  height: 1%;
  flex: 1;
}
.scroll-view .scroll-contain scroll-view {
  position: relative;
  height: 100%;
}
.scroll-view .scroll-contain scroll-view .item {
  display: flex;
}
.scroll-view .scroll-contain scroll-view .item + .item {
  margin-top: 30rpx;
}
.scroll-view .scroll-contain scroll-view .item image {
  width: 270rpx;
  height: 160rpx;
  border-radius: 10rpx;
}
.scroll-view .scroll-contain scroll-view .item .info {
  flex: 1;
  width: 1%;
  margin-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.scroll-view .scroll-contain scroll-view .item .info .l {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  width: 1%;
  margin-right: 20rpx;
}
.scroll-view .scroll-contain scroll-view .item .info .l .tp {
  font-size: 30rpx;
  color: #2e2e2e;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.scroll-view .scroll-contain scroll-view .item .info .l .bt {
  font-size: 24rpx;
}
.scroll-view .scroll-contain scroll-view .item .info .l .bt .head {
  color: #B3B3B3;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.scroll-view .scroll-contain scroll-view .item .info .l .bt .head text + text {
  margin-left: 20rpx;
}
.scroll-view .scroll-contain scroll-view .item .info .l .bt .body {
  color: #4D5AB4;
  margin-top: 10rpx;
}
.scroll-view .scroll-contain scroll-view .item .info .l .bt .foot {
  margin-top: 10rpx;
}
.scroll-view .scroll-contain scroll-view .item .info .l .bt .foot .small {
  color: #FF9813;
  font-size: 24rpx;
}
.scroll-view .scroll-contain scroll-view .item .info .l .bt .foot .money {
  color: #FF9813;
  font-size: 30rpx;
}
.scroll-view .scroll-contain scroll-view .item .info .l .bt .foot .code {
  color: #B3B3B3;
  font-size: 24rpx;
  margin-left: 10rpx;
}
.scroll-view .scroll-contain scroll-view .item .info .l .bt .foot .sale {
  color: #4D5AB4;
  margin-left: 10rpx;
}
.scroll-view .scroll-contain scroll-view .item .info .r {
  font-size: 30rpx;
  background-color: #429435;
  color: #fff;
  padding: 20rpx 50rpx;
  border-radius: 10rpx;
}

