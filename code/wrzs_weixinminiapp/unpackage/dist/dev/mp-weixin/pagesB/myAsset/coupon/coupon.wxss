.content {
  display: flex;
  flex-direction: column;
}
.scroll-view {
  position: relative;
  z-index: 1;
  flex: 1;
  height: 1%;
}
.scroll-view scroll-view {
  height: 100%;
}
.scroll-view scroll-view .item {
  position: relative;
}
.scroll-view scroll-view .item image {
  width: 100%;
  height: 177px;
}
.scroll-view scroll-view .item .card-cnt {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.scroll-view scroll-view .item .card-cnt .head {
  padding-top: 40rpx;
  padding-left: 60rpx;
}
.scroll-view scroll-view .item .card-cnt .head .h4 {
  font-size: 30rpx;
  color: #fff;
}
.scroll-view scroll-view .item .card-cnt .head .p {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 20rpx;
}
.scroll-view scroll-view .item .card-cnt .foot {
  font-size: 37rpx;
  color: #fff;
  padding-left: 60rpx;
  margin-top: 50rpx;
}
.scroll-view scroll-view .item .card-cnt .foot .big {
  font-size: 60rpx;
}

