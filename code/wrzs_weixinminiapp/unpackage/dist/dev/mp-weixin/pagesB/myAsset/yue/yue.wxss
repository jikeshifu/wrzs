.content {
  display: flex;
  flex-direction: column;
}
.bg-wrap {
  position: relative;
}
.bg-wrap image {
  width: 100%;
  height: 132px;
}
.bg-wrap .abs-contt {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 50rpx 60rpx;
}
.bg-wrap .abs-contt .head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
}
.bg-wrap .abs-contt .head .left {
  color: rgba(255, 255, 255, 0.6);
}
.bg-wrap .abs-contt .head .right {
  color: #fff;
}
.bg-wrap .abs-contt .head .right .iconfont {
  font-size: 24rpx;
  margin-left: 10rpx;
}
.bg-wrap .abs-contt .foot {
  margin-top: 35rpx;
  font-size: 48rpx;
  color: #fff;
}
.bg-wrap .abs-contt .foot text {
  display: inline-block;
  font-size: 24rpx;
  border-radius: 30rpx;
  background-color: #ff9813;
  margin-left: 20rpx;
  padding: 10rpx 15rpx;
  vertical-align: bottom;
}
.h4 {
  color: #B3B3B3;
  font-size: 18rpx;
  text-align: center;
}
scroll-view {
  position: relative;
  flex: 1;
  height: 1%;
}
scroll-view .item {
  margin-left: 20rpx;
  margin-right: 20rpx;
  box-shadow: 0 10rpx 18rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  padding: 30rpx 24rpx;
}
scroll-view .item .head {
  display: flex;
}
scroll-view .item .head image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
}
scroll-view .item .head .info {
  flex: 1;
  width: 1%;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
scroll-view .item .head .info .title {
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 36rpx;
}
scroll-view .item .head .info .bt .p {
  color: #B3B3B3;
  font-size: 24rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
scroll-view .item .head .info .bt .p text {
  color: #828282;
  font-size: 24rpx;
  margin-right: 10rpx;
}
scroll-view .item .head .info .bt .p + .p {
  margin-top: 10rpx;
}
scroll-view .item .foot {
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #F0F0F0;
  padding-top: 30rpx;
  margin-top: 30rpx;
}
scroll-view .item .foot .left {
  font-size: 24rpx;
  display: flex;
  align-items: center;
  color: #B3B3B3;
}
scroll-view .item .foot .left text:first-child {
  margin-left: 10rpx;
}
scroll-view .item .foot .left text {
  color: #FF9813;
}
scroll-view .item .foot .left .big {
  font-size: 36rpx;
}
scroll-view .item .foot .right {
  color: #fff;
  background-color: #4BA73C;
  border-radius: 10rpx;
  padding: 10rpx 15rpx;
}
scroll-view .item + .item {
  margin-top: 20rpx;
}

