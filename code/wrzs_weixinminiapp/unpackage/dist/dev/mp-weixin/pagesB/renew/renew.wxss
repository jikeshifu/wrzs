.fixed-topbar {
  position: relative;
}
.fixed-topbar image {
  width: 100%;
  height: 232px;
}
.fixed-topbar .fixed-item {
  position: absolute;
  z-index: 3;
  top: 0;
  left: 0;
  width: 100%;
}
.fixed-topbar .fixed-item .title {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
}
.fixed-topbar .fixed-item .title .iconfont {
  position: absolute;
  z-index: 1;
  left: 0;
  padding-left: 20rpx;
  font-size: 45rpx;
  font-weight: bold;
}
.fixed-topbar .fixed-item .title .h1 {
  font-size: 37rpx;
}
.fixed-topbar .center-cont {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.fixed-topbar .center-cont .left {
  color: #fff;
  margin-right: 10rpx;
}
.fixed-topbar .center-cont .left .iconfont {
  vertical-align: -2px;
  font-size: 40rpx;
  margin-right: 5rpx;
}
.slider-contain {
  position: relative;
  z-index: 2;
  margin: -50px 30rpx 0;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.16);
  border-radius: 10rpx;
  background-color: #fff;
  padding: 30rpx;
}
.slider-contain .tip {
  font-size: 18rpx;
}
.slider-contain .tip .iconfont {
  color: #bbb;
  vertical-align: -4rpx;
  margin-right: 5rpx;
}
.slider-contain .num-box {
  text-align: center;
}
.slider-contain .num-box .h4 {
  font-size: 72rpx;
}
.slider-contain .num-box .p {
  color: #B3B3B3;
  font-size: 24rpx;
  margin-top: 10rpx;
}
.slider-contain slider {
  margin: 30rpx 0 0;
}
.slider-contain .foot {
  text-align: right;
  font-size: 30rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.slider-contain .foot .warn {
  color: #FF9813;
  margin-left: 5rpx;
  margin-right: 5rpx;
}
.slider-contain .foot .small {
  font-size: 24rpx;
  color: #FF9813;
  margin-left: 10rpx;
}
.slider-contain .foot .big {
  font-size: 42rpx;
  color: #FF9813;
}
.pay-way {
  margin: 30rpx;
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  background-color: #fff;
}
.pay-way .item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.pay-way .item .left {
  font-size: 30rpx;
}
.pay-way .item .left .iconfont {
  margin-right: 20rpx;
  font-size: 40rpx;
}
.pay-way .item .left .icon-qb {
  color: #ff9813;
}
.pay-way .item .left .icon-wxzf {
  color: #6dbc41;
  vertical-align: -4rpx;
}
.pay-way .item .left .warn {
  color: #FF9813;
  margin-left: 20rpx;
}
.pay-way .item .right image {
  width: 40rpx;
  height: 40rpx;
}
.empty-fixed {
  height: 120rpx;
}
.fixed-bottom-btn {
  position: fixed;
  z-index: 10;
  bottom: 20rpx;
  left: 0;
  width: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.fixed-bottom-btn button {
  height: 88rpx;
  line-height: 88rpx;
  background-color: #429435;
  border-radius: 20rpx;
  font-size: 36rpx;
}

