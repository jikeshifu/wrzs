.content {
  display: flex;
  flex-direction: column;
}
.fixed-topbar {
  position: relative;
}
.fixed-topbar image {
  width: 100%;
  height: 267px;
}
.fixed-topbar .fixed-item {
  position: absolute;
  z-index: 1;
  top: 0;
  left: 0;
  width: 100%;
}
.fixed-topbar .fixed-item .title {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 40rpx;
}
.fixed-topbar .fixed-item .title .iconfont {
  position: absolute;
  z-index: 1;
  font-size: 40rpx;
  left: 0;
  padding-left: 20rpx;
  font-weight: bold;
}
.form-group {
  flex: 1;
  height: 1%;
  position: relative;
  z-index: 2;
  margin-top: -10%;
  background-color: #fff;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  padding: 30rpx;
  overflow-y: auto;
}
.form-group .title {
  font-size: 37rpx;
}
.form-group .form {
  background-color: #FAFAFA;
  border-radius: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-top: 30rpx;
}
.form-group .form .input-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}
.form-group .form .input-group .left {
  font-size: 30rpx;
}
.form-group .form .input-group .left text {
  color: #FF5656;
}
.form-group .form .input-group input {
  height: 80rpx;
  font-size: 30rpx;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
}
.form-group .form .input-group picker {
  color: #c9c9c9;
  height: 80rpx;
  line-height: 80rpx;
  flex: 1;
  margin-left: 20rpx;
  text-align: right;
}
.form-group .form .input-group picker .active {
  color: #000;
}
.form-group .form .input-group + .input-group {
  border-top: 1px solid #ECECEC;
}
.textarea {
  margin-top: 30rpx;
}
.textarea textarea {
  width: 100%;
  background-color: #FAFAFA;
  border-radius: 10rpx;
  padding: 20rpx;
}
.h190 {
  height: 190rpx;
}
.fixed-bottom-btn {
  position: fixed;
  z-index: 10;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 30rpx;
  background-color: #fff;
}
.fixed-bottom-btn .p {
  font-size: 24rpx;
  text-align: center;
}
.fixed-bottom-btn button {
  margin-top: 20rpx;
  background-color: #4AA63C;
  border-radius: 20rpx;
  font-size: 36rpx;
  height: 88rpx;
  line-height: 88rpx;
}

