.content {
  display: flex;
  flex-direction: column;
}
.tabs-nav {
  position: relative;
  z-index: 1;
  display: flex;
}
.tabs-nav .item {
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  flex: 1;
  color: #4A5B6C;
  text-align: center;
  transition: all .25s;
}
.tabs-nav .item:after {
  content: '';
  position: absolute;
  z-index: 1;
  bottom: 0;
  left: 0;
  right: 0;
  width: 20%;
  height: 2px;
  background-color: transparent;
  margin-left: auto;
  margin-right: auto;
  transition: all .25s;
}
.tabs-nav .item.active {
  color: #429435;
}
.tabs-nav .item.active:after {
  background-color: #429435;
}
.swiper {
  flex: 1;
  height: 1%;
}
.swiper swiper,
.swiper scroll-view {
  height: 100%;
}
.swiper scroll-view {
  margin-top: 30rpx;
  padding-bottom: 30rpx;
}
.swiper .item {
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.swiper .item .top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.swiper .item .top .left {
  font-size: 24rpx;
  flex: 1;
  width: 1%;
  margin-right: 30rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.swiper .item .top .right .qdsh {
  display: flex;
  align-items: center;
  color: #FF9813;
  font-size: 26rpx;
}
.swiper .item .top .right .qdsh button {
  height: 52rpx;
  line-height: 52rpx;
  font-size: 24rpx;
  background-color: #429435;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.swiper .item .top .right .normal {
  font-size: 30rpx;
}
.swiper .item .top .right .normal text {
  color: #FF9813;
  margin-right: 20rpx;
}
.swiper .item .top .right .dzf {
  display: flex;
  align-items: center;
  color: #FF9813;
  font-size: 42rpx;
}
.swiper .item .top .right .dzf text {
  font-size: 24rpx;
}
.swiper .item .top .right .dzf button {
  height: 52rpx;
  line-height: 52rpx;
  font-size: 24rpx;
  background-color: #429435;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.swiper .item .goods-wrap {
  margin-top: 20rpx;
}
.swiper .item .goods-wrap .inner {
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.swiper .item .goods-wrap .inner image {
  width: 160rpx;
  height: 130rpx;
}
.swiper .item .goods-wrap .inner .info {
  flex: 1;
  width: 1%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}
.swiper .item .goods-wrap .inner .info .h4 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  height: 65rpx;
  line-height: 35rpx;
  font-size: 30rpx;
}
.swiper .item .goods-wrap .inner .info .bt {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
}
.swiper .item .goods-wrap .inner .info .bt .right {
  color: #B3B3B3;
}
.swiper .item + .item {
  margin-top: 30rpx;
}

