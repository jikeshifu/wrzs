<view class="content"><view class="fixed-topbar"><image src="{{baseUrl+'/static/imgs/payOrder/bg.png'}}" mode="widthFix"></image><view class="fixed-item" style="{{'background-color:'+('rgba(65, 146, 53, '+bgColor+')')+';'}}"><view style="{{'height:'+(menuButtonBoundingClientRect.top+'px')+';'}}"></view><view class="title" style="{{'height:'+(menuButtonBoundingClientRect.height+'px')+';'}}"><view data-event-opts="{{[['tap',[['back',['$event']]]]]}}" class="iconfont icon-left" bindtap="__e"></view><view class="h1">支付订单</view></view><view style="{{'height:'+(menuButtonBoundingClientRect.top/2+'px')+';'}}"></view></view><view data-event-opts="{{[['tap',[['choooseAddress',['$event']]]]]}}" class="address-box" bindtap="__e"><view class="tabs">快递邮寄</view><view class="flex"><view class="left"><view class="h4">{{address.detailInfo}}</view><view class="p">{{address.userName}}<text>{{address.telNumber}}</text></view></view><view class="right"><text class="iconfont icon-right"></text></view></view><view class="foot"><text class="iconfont icon-tip"></text>预计5天送达</view></view></view><view class="goods-wrap"><block wx:for="{{goodsData.list}}" wx:for-item="item" wx:for-index="__i0__" wx:key="*this"><view class="item"><image src="{{baseUrl+item.goods_image}}" mode="aspectFill"></image><view class="info"><view class="h4">{{item.goods_name}}</view><view class="bt"><view class="left">{{"￥"+item.goods_price}}</view><view class="right">{{"数量x"+item.goods_number}}</view></view></view></view></block><block wx:if="{{fromPage!=='order'}}"><view class="coupon-item" url="/pagesB/myAsset/coupon/coupon" data-event-opts="{{[['tap',[['chooseCoupon',['$event']]]]]}}" bindtap="__e"><view class="left">卡券</view><view class="right">{{''+(couponInfo.title?couponInfo.title:'无使用')}}<text class="iconfont icon-right"></text></view></view></block><view class="foot">共<text class="warn">{{goodsData.number}}</text>件商品<text class="full"></text>合计费用<text class="small">￥</text><text class="big">{{totalPay}}</text></view></view><view class="pay-way"><view data-event-opts="{{[['tap',[['payChange',['qb']]]]]}}" class="item t" bindtap="__e"><view class="left"><text class="iconfont icon-qb"></text>钱包余额<text class="warn">{{"(余额"+myAsset.money+"元)"}}</text></view><view class="right"><block wx:if="{{payway==='qb'}}"><image src="{{baseUrl+'/static/imgs/payOrder/checked.png'}}" mode="aspectFill"></image></block><block wx:else><image src="{{baseUrl+'/static/imgs/payOrder/check.png'}}" mode="aspectFill"></image></block></view></view><block wx:if="{{totalPay!==0}}"><view data-event-opts="{{[['tap',[['payChange',['wxzf']]]]]}}" class="item b" bindtap="__e"><view class="left"><text class="iconfont icon-wxzf"></text>微信支付</view><view class="right"><block wx:if="{{payway==='wxzf'}}"><image src="{{baseUrl+'/static/imgs/payOrder/checked.png'}}" mode="aspectFill"></image></block><block wx:else><image src="{{baseUrl+'/static/imgs/payOrder/check.png'}}" mode="aspectFill"></image></block></view></view></block></view><view class="empty-fixed"></view><view class="fixed-bottom-btn"><button type="primary" data-event-opts="{{[['tap',[['paySubmit',['$event']]]]]}}" bindtap="__e">立即支付</button></view></view>