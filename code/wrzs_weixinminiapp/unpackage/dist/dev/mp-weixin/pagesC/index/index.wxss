page {
  background-color: #F8F8F8;
}
.content {
  overflow-y: auto;
}
.fixed {
  position: fixed;
  z-index: 10;
  left: 0;
  width: 100%;
}
.search-box {
  height: 100rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
}
.search-box navigator {
  background-color: #F7F7F7;
  border-radius: 50rpx;
  text-align: center;
  color: #D3D3D3;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  flex: 1;
}
.search-box navigator .iconfont {
  font-size: 40rpx;
  vertical-align: -4rpx;
  margin-right: 6rpx;
}
.search-box navigator.active {
  color: #3e3e3e;
}
.swiper-pics {
  background-color: #fff;
  padding: 20rpx;
  padding-bottom: 0;
}
.swiper-pics swiper {
  height: 400rpx;
}
.swiper-pics swiper .swiper-item,
.swiper-pics swiper image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.foot-tabs {
  position: relative;
  width: 100%;
  height: 90rpx;
}
.foot-tabs scroll-view {
  width: 100%;
  white-space: nowrap;
}
.foot-tabs scroll-view .item {
  position: relative;
  height: 90rpx;
  line-height: 90rpx;
  display: inline-block;
  width: 150rpx;
  transition: all .25s;
}
.foot-tabs scroll-view .item:after {
  transition: all .25s;
  content: '';
  position: absolute;
  z-index: 1;
  bottom: 0;
  left: 0;
  width: 20%;
  height: 2px;
  background-color: transparent;
}
.foot-tabs scroll-view .item.active {
  color: #429435;
}
.foot-tabs scroll-view .item.active:after {
  background-color: #429435;
}
.foot-tabs ::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.foot-tabs.fixed {
  position: fixed;
  z-index: 10;
  left: 20rpx;
  right: 20rpx;
  background-color: #fff;
}
.swiper-list {
  position: relative;
  padding: 20rpx;
  min-height: 250px;
}
.swiper-list .row {
  margin-left: -10rpx;
  margin-right: -10rpx;
}
.swiper-list .row .col {
  float: left;
  width: 50%;
  padding-left: 10rpx;
  padding-right: -10rpx;
  margin-bottom: 20rpx;
}
.swiper-list .row .col .item {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
}
.swiper-list .row .col .item image {
  width: 100%;
  height: 150rpx;
}
.swiper-list .row .col .item .caption {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 80rpx;
  line-height: 40rpx;
  margin-top: 10rpx;
}
.swiper-list .row .col .item .caption text {
  font-size: 18rpx;
  border: 1px solid #FF4A4A;
  border-radius: 4rpx;
  color: #FF4A4A;
  padding: 2rpx 6rpx;
  margin-right: 10rpx;
}
.swiper-list .row .col .item .foot {
  color: #FF9813;
  font-size: 36rpx;
  margin-top: 20rpx;
}
.swiper-list .row .col .item .foot text {
  font-size: 24rpx;
}
.swiper-list .row:before,
.swiper-list .row:after {
  content: '';
  display: table;
  clear: both;
}

