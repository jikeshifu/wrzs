@-webkit-keyframes slideUp {
0% {
    opacity: 0;
    -webkit-transform: translateY(100rpx);
            transform: translateY(100rpx);
}
100% {
    opacity: 1;
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
}
@keyframes slideUp {
0% {
    opacity: 0;
    -webkit-transform: translateY(100rpx);
            transform: translateY(100rpx);
}
100% {
    opacity: 1;
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
}
@-webkit-keyframes slideDown {
0% {
    opacity: 1;
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
100% {
    opacity: 0;
    -webkit-transform: translateY(100rpx);
            transform: translateY(100rpx);
}
}
@keyframes slideDown {
0% {
    opacity: 1;
    -webkit-transform: translateY(0);
            transform: translateY(0);
}
100% {
    opacity: 0;
    -webkit-transform: translateY(100rpx);
            transform: translateY(100rpx);
}
}
