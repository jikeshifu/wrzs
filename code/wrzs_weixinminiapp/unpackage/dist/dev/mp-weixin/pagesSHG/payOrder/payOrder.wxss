.fixed-topbar {
  position: relative;
}
.fixed-topbar image {
  width: 100%;
  height: 231px;
}
.fixed-topbar .fixed-item {
  position: fixed;
  z-index: 10;
  top: 0;
  left: 0;
  width: 100%;
}
.fixed-topbar .fixed-item .title {
  position: relative;
  display: flex;
  align-items: center;
  color: #fff;
  justify-content: center;
}
.fixed-topbar .fixed-item .title .iconfont {
  position: absolute;
  z-index: 1;
  font-size: 40rpx;
  padding-left: 20rpx;
  left: 0;
  font-weight: bold;
}
.fixed-topbar .fixed-item .title .h1 {
  font-size: 37rpx;
}
.fixed-topbar .goods-info {
  position: absolute;
  z-index: 1;
  width: 95%;
  left: 0;
  right: 0;
  bottom: -20%;
  margin-left: auto;
  margin-right: auto;
  background-color: #fff;
  box-shadow: 0 5rpx 18rpx 0 rgba(0, 0, 0, 0.1);
  border-radius: 20rpx;
  padding: 25rpx 30rpx;
}
.fixed-topbar .goods-info .item {
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.fixed-topbar .goods-info .item image {
  width: 160rpx;
  height: 130rpx;
}
.fixed-topbar .goods-info .item .info {
  flex: 1;
  width: 1%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}
.fixed-topbar .goods-info .item .info .h4 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  height: 65rpx;
  line-height: 35rpx;
  font-size: 30rpx;
}
.fixed-topbar .goods-info .item .info .bt {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
}
.fixed-topbar .goods-info .item .info .bt .right {
  color: #FF9813;
}
.pay-way {
  margin: 30rpx;
  margin-top: 120rpx;
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.15);
  background-color: #fff;
}
.pay-way .item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.pay-way .item .left {
  font-size: 30rpx;
}
.pay-way .item .left .iconfont {
  margin-right: 20rpx;
  font-size: 40rpx;
}
.pay-way .item .left .icon-qb {
  color: #ff9813;
}
.pay-way .item .left .icon-wxzf {
  color: #6dbc41;
  vertical-align: -4rpx;
}
.pay-way .item .left .warn {
  color: #FF9813;
  margin-left: 20rpx;
}
.pay-way .item .right image {
  width: 40rpx;
  height: 40rpx;
}
.empty-fixed {
  height: 120rpx;
}
.fixed-bottom-btn {
  position: fixed;
  z-index: 10;
  bottom: 20rpx;
  left: 0;
  width: 100%;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.fixed-bottom-btn button {
  height: 88rpx;
  line-height: 88rpx;
  background-color: #429435;
  border-radius: 20rpx;
  font-size: 36rpx;
}

