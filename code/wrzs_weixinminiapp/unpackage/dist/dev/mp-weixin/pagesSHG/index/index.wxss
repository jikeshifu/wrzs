.content {
  display: flex;
  flex-direction: column;
}
page {
  background-color: #F8F8F8;
}
.room-info {
  background-color: #fff;
  padding: 30rpx 20rpx;
  display: flex;
}
.room-info image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
}
.room-info .info {
  flex: 1;
  width: 1%;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.room-info .info .top {
  font-size: 36rpx;
}
.room-info .info .foot .p {
  color: #B3B3B3;
  font-size: 24rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.room-info .info .foot .p .iconfont {
  font-size: 30rpx;
  margin-right: 5rpx;
}
.room-info .info .foot .p + .p {
  margin-top: 10rpx;
}
.row {
  padding: 20rpx 10rpx;
}
.row .col {
  float: left;
  width: 50%;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-bottom: 20rpx;
}
.row .col .item {
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
}
.row .col .item .img-contain {
  position: relative;
}
.row .col .item .img-contain .tag {
  position: absolute;
  z-index: 1;
  background-color: #429435;
  color: #fff;
  top: 20rpx;
  left: 0;
  font-size: 24rpx;
  width: 50rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
}
.row .col .item .img-contain .tag:after {
  content: '';
  position: absolute;
  width: 0;
  z-index: -1;
  height: 0;
  right: -50%;
  top: 0;
  border-style: solid;
  border-width: 20rpx;
  border-color: #429435 transparent #429435 #429435;
}
.row .col .item .img-contain image {
  width: 100%;
  height: 200rpx;
}
.row .col .item .caption {
  margin-top: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  height: 60rpx;
  line-height: 30rpx;
  font-size: 24rpx;
}
.row .col .item .caption text {
  font-size: 18rpx;
  border: 1px solid #ff2c2c;
  padding: 1px 5rpx;
  color: #ff2c2c;
  border-radius: 6rpx;
  margin-right: 10rpx;
}
.row .col .item .foot {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}
.row .col .item .foot .left {
  color: #FF9813;
  font-size: 36rpx;
}
.row .col .item .foot .left text {
  font-size: 24rpx;
}
.row .col .item .foot .right .error {
  background-color: rgba(255, 152, 19, 0.15);
  color: #FF9813;
  font-size: 24rpx;
  padding: 5rpx;
  border-radius: 6rpx;
}
.row .col .item .foot .right .null {
  position: absolute;
  z-index: 1;
  right: 0;
  bottom: 0;
}
.row .col .item .foot .right .null image {
  width: 82rpx;
  height: 63rpx;
}
.row:after,
.row:before {
  content: '';
  display: table;
  clear: both;
}

